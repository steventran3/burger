<div class="text-center">
	<h1>Eat-Da-Burger!</h1>
</div>

<div class="text-center">
	<img class="image" src="assets/img/burger.png">
</div>

<div class="container text-center">
	<div class="row">
		<div class="col-md-6">
			<h2>Devour Me!</h2>
				<div>
				  {{#each burgers}}
				    {{#unless devoured}}
				        <div class="burgerName">
				          {{this.id}}. {{this.burger_name}}
				            <button class="devourBurger" data-id="{{this.id}}">
				              DEVOUR!
				            </button>
				        </div>
				    {{/unless}}
				  {{/each}}
				</div>
		</div>

		<div class="col-md-6">
			<h2>Devoured!</h2>
				<div>
				  {{#each burgers}}
				    {{#if devoured}}
				       <div class="burgerName">
				          {{this.id}}. {{this.burger_name}}
				       </div>
				    {{/if}}
				  {{/each}}
				</div>
		</div>
	</div>
</div>		

<div class="text-center">
	<h2>Add a Burger</h2>
		<form class="create-form">

		  <div class="form-group burgerName">
		    <label for="burger">Burger Name:</label>
		    <input type="text" id="burger" name="burger_name">
		  </div>

		  <button class="devourBurger" type="submit">Add Burger</button>
		</form>
</div>